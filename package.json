{
  "name": "hello_world",
  "version": "1.0.0",
  "description": "hello world sample for NodeJS",
  "main": "app.js",
  "repository": "https://github.com/wlckconsulting/sam-template",
  "author": "SAM CLI",
  "license": "MIT",
  "dependencies": {
    "axios": ">=1.3.4",
    "dotenv": "^17.2.1",
    "uuid": "^9.0.0",
    "zod": "^4.0.17"
  },
  "scripts": {
    "build": "tsc && cp package.json dist/ && cd dist && npm install --production && cd .. && sam build",
    "deploy": "npm run build && sam deploy --guided",
    "watch": "tsc --watch",
    "start:local": "tsc && cp package.json dist/ && cp .env dist/ && cd dist && npm install --production && cd .. && sam local start-api"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/node": "^18.15.3",
    "@types/uuid": "^9.0.1",
    "aws-sdk": "^2.1338.0",
    "typescript": "^5.0.2"
  }
}
